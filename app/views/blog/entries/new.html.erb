<h2>Create a new entry!</h2>

<%= form_for [:blog, @entry], url: blog_entries_path do |f|  %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title, :size => 40, :placeholder => "Title", :required => true %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body, size: "80x20", :placeholder => "Enter your story..."%>
	</p>
	<%= f.submit 'Create!' %>
<% end %>